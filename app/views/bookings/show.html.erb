<div class="container payment-final">
  <div class="row py-4">
    <div class="col-md-3"><%= image_tag @booking.game.photos[0], width: '100%' %></div>
    <div class="col">
      <h1>Booking #<%= @booking.id %> <small><span class="badge badge-primary"><%= @booking.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON -</strong> <%= @booking.created_at.to_date %></li>
        <li><strong>GAME -</strong> <%= @booking.game.name %></li>
        <li><strong>TOTAL -</strong> <%= humanized_money_with_symbol @booking.price_cents.fdiv(100) %></li>
        <li><strong>FROM -</strong> <%= @booking.date_begin.strftime("%a, %d %b %Y") %></li>
        <li><strong>TO -</strong> <%= @booking.date_end.strftime("%a, %d %b %Y") %></li>
      </ul>
    </div>
  </div>
</div>
