<%= render 'shared/banner-homepage' %>
<div class="container mb-5">
  <%if params[:query].present?%>
    <h2>We found <%=@games.count%> result(s) corresponding to your search : <%= params[:query]%> </h2>
  <%else%>
    <h1>All our board games</h1>
  <%end%>
  <div class="row">
    <div class="col-8">
      <div class="row">
        <%@games.each do |game|%>
          <div class="col-lg-6 col-sm-12">
            <div class="hearts-absolute">
              <div id=<%=game.id%> >
                <div class="favorite-hearts" >
                  <% if current_user.get_favorite(game)%>
                    <%= link_to game_favorite_path(game, current_user.get_favorite(game) ), method: :delete, remote: true do%>
                      <i class="far fa-heart"></i>
                    <% end %>
                  <% else %>
                    <%= link_to game_favorites_path(game), method: :post, remote: true do%>
                      <i class="fas fa-heart"></i>
                    <% end %>
                  <% end %>
                </div>
              </div>
              <%= link_to game_path(game), class:"btn-card" do%>
                <div class="card-trip">
                  <%= cl_image_tag(game.photo.key, crop: :fill) %>
                  <div class="card-trip-infos">
                    <div>
                      <div class="card-trip-title">
                        <h2><%= game.name%></h2>
                        <h3><%= game.address%></h3>
                      </div>
                      <div class="filters">
                        <div class="symbol">
                          <i class="fas fa-coins"></i>
                          <p> <%=game.price%>$ </p>
                        </div>
                        <div class="symbol">
                          <i class="fas fa-user-friends"></i>
                          <p><%=game.min_player%>-<%=game.max_player%> players</p>
                        </div>
                        <div class="symbol">
                          <i class="fas fa-clock"></i>
                          <p><%=game.playtime%> mins</p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              <%end%>
            </div>

          </div>
        <%end%>
      </div>
    </div>

    <div class="col-4">
      <div style="width: 100%;"
          data-controller="mapbox"
          data-mapbox-markers-value="<%= @markers.to_json %>"
          data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
          class="map-home">
      </div>

    </div>
  </div>

</div>
